<odoo>

    <record id="view_magento_product_labels_update" model="ir.ui.view">
        <field name="name">Update Magento Product Labels</field>
        <field name="model">magento.product.labels.update</field>
        <field name="arch" type="xml">
            <form string="Update Product Labels">
                <group>
                    <field name="product_label_ids" required="1" widget="many2many_tags"
                           options="{'no_create':True,'no_create_edit': True}"/>
                </group>
                <group>
                    <div style="color:#000000">
                        <p class="alert alert-warning" role="alert">
                            <u>
                                <h3 style="font-weight:bold;color:#7d5a29">Note :</h3>
                            </u>
                            <b>
                                This action will update Product Labels for the selected Products!
                            </b>
                        </p>
                    </div>
                </group>
                <footer>
                    <button string="Update" class="oe_highlight" type="object"
                            name="update_product_labels"/>
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="magento_product_labels_update_wizard" model="ir.actions.act_window">
        <field name="name">Product Labels Update</field>
        <field name="res_model">magento.product.labels.update</field>
        <field name="binding_model_id" ref="model_magento_configurable_product"/>
        <field name="binding_view_types">list</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_magento_product_labels_update"/>
        <field name="target">new</field>
    </record>

</odoo>