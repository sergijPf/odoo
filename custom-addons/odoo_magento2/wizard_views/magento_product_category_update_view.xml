<odoo>

    <record id="view_magento_product_category_change" model="ir.ui.view">
            <field name="name">Change Magento Product Category</field>
            <field name="model">magento.product.category.update</field>
            <field name="arch" type="xml">
                <form string="Change Magento Product Category">
                    <group>
                        <field name="magento_instance_id" required="1" options="{'no_create':True,'no_create_edit': True}"/>
                        <field name="product_categ" required="1" widget="many2many_tags" options="{'no_create':True,'no_create_edit': True}"/>
                    </group>
                    <group>
                        <div style="color:#000000">
                            <p class="alert alert-warning" role="alert">
                                <u>
                                    <h3 style="font-weight:bold;color:#7d5a29">Note :</h3>
                                </u>
                                <b>
                                    This action will update Product Category for the selected Products in Magento Layer!
                                </b>
                            </p>
                        </div>
                    </group>
                    <footer>
                        <button string="Change" class="oe_highlight" type="object"
                                name="update_products_category_for_magento"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    <record id="magento_product_category_change_wizard" model="ir.actions.act_window">
        <field name="name">Change Magento Category</field>
        <field name="res_model">magento.product.category.update</field>
        <field name="binding_model_id" ref="model_magento_configurable_product"/>
        <field name="binding_view_types">list,form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_magento_product_category_change"/>
        <field name="target">new</field>
    </record>

</odoo>