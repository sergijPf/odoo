<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <data>
        <record model="ir.module.category" id="module_category_magento">
            <field name="name">Magento</field>
            <field name="description">Magento User Access Rights</field>
            <field name="sequence">200</field>
        </record>

        <record model="res.groups" id="group_magento_user">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_magento"/>
            <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record model="res.groups" id="group_magento_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_magento"/>
            <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4,ref('odoo_magento2.group_magento_user')), (4,ref('sales_team.group_sale_manager'))]"/>
        </record>

        <!-- Multi - Company Rules -->
        <record model="ir.rule" id="magento_instance_comp_rule">
            <field name="name">Magento Instance multi-company</field>
            <field name="model_id" ref="model_magento_instance"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="magento_website_comp_rule">
            <field name="name">Magento Website multi-company</field>
            <field name="model_id" ref="model_magento_website"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>


