<?xml version="1.0" ?>
<odoo>
    <record id="magento_view_order_form" model="ir.ui.view">
        <field name="name">odoo_magento2.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="cancel_order_in_magento" type="object" string="Cancel In Magento"
                        attrs="{'invisible' : ['|', '|', ('magento_instance_id','=',False),
                         ('state','!=','cancel'), ('is_canceled_in_magento','=',True)]}"/>
            </xpath>

            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button type="object" name="action_view_stock_move_" class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('moves_count', '=', 0)]}"
                        groups="base.group_user">
                    <field name="moves_count" widget="statinfo" string="Stock Moves"/>
                </button>
            </xpath>

            <xpath expr="//notebook[last()]" position="inside">
                <page name="automation_information" string="Magento Information"
                      attrs="{'invisible' : [('magento_instance_id','=',False)]}">
                    <group>
                        <group>
                            <field name="magento_instance_id" readonly="1"/>
                            <field name="magento_order_id" readonly="1"/>
                            <field name="magento_website_id" readonly="1"/>
                            <field name="store_id" readonly="1"/>
                            <field name="magento_order_reference" readonly="1"/>
                            <field name="is_canceled_in_magento" readonly="1"
                                   attrs="{'invisible': [('is_canceled_in_magento','!=',True)]}"/>
<!--                            <field name="updated_in_magento" readonly="1"/>-->
                        </group>
                        <group>
                            <field name="auto_workflow_process_id" readonly="1"/>
                            <field name="magento_carrier_name" readonly="1"/>
                            <field name="magento_payment_method_id" readonly="1"/>
                            <field name="order_total_amount" readonly="1"/>
                            <field name="order_currency_code" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="magento_sale_order_tree_view" model="ir.ui.view">
        <field name="name">magento.sale.order.tree.view</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Sales Orders" create="false">
                <field name="message_unread" invisible="1"/>
                <field name="name" string="Order Number"/>
                <field name="date_order"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="amount_total" sum="Total Tax Included"/>
                <field name="magento_payment_method_id" />
                <field name="store_id"/>
                <field name="state" widget="badge" optional="show" on_change="1"
                       decoration-success="state == 'sale' or state == 'done'"
                       decoration-info="state == 'draft' or state == 'sent'" modifiers="{'readonly': true}"/>
                <field name="invoice_status" widget="badge" optional="show"
                       decoration-success="invoice_status == 'invoiced'"
                       decoration-info="invoice_status in ['to invoice', 'no']"
                       decoration-warning="invoice_status == 'upselling'"/>
            </tree>
        </field>
    </record>

     <record id="sale_order_filter_view" model="ir.ui.view">
         <field name="name">sale.order.filter.view</field>
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale.view_sales_order_filter"/>
         <field name="arch" type="xml">
            <xpath expr="//filter[@name='customer']" position="before">
                <filter name="Magento Instance" string="Magento Instance"
                        context="{'group_by' : 'magento_instance_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_quotation_filter_view" model="ir.ui.view">
         <field name="name">sale.order.quotation.filter.view</field>
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale.view_sales_order_filter"/>
         <field name="arch" type="xml">
            <xpath expr="//filter[@name='customer']" position="before">
                <filter name="Magento Instance" string="Magento Instance"
                        context="{'group_by' : 'magento_instance_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="magento_action_sales_quotations" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_id" ref="magento_sale_order_tree_view"/>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('magento_instance_id','!=',False), ('state','in',('draft','sent','cancel'))]</field>
        <field name="search_view_id" ref="sale_order_quotation_filter_view"/>
    </record>

    <record id="magento_action_sales_order" model="ir.actions.act_window">
        <field name="name">Sales Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_id" ref="magento_sale_order_tree_view"/>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('magento_instance_id','!=',False),('state','not in',('draft','sent','cancel'))]</field>
        <field name="search_view_id" ref="sale_order_filter_view"/>
    </record>

    <menuitem id="menu_magento_sales_and_customer" name="Sales"
              parent="odoo_magento2.menu_magento_root" sequence="4"/>

    <menuitem id="menu_item_parent_sale_order" name="Orders"
              parent="odoo_magento2.menu_magento_sales_and_customer" sequence="2"/>

    <menuitem id="magento_menu_item_sales_quotations" name="Quotations"
              parent="odoo_magento2.menu_item_parent_sale_order"
              action="magento_action_sales_quotations" sequence="9"/>

    <menuitem id="magento_menu_item_sales_order" name="Orders"
              parent="odoo_magento2.menu_item_parent_sale_order"
              action="magento_action_sales_order" sequence="10"/>

</odoo>
