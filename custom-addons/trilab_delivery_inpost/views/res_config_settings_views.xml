<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.inpost</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="12"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='ups']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="inpost">
                    <div class="o_setting_left_pane">
<!--                        <field name="module_trilab_delivery_inpost" widget="upgrade_boolean"/>-->
                        <field name="module_trilab_delivery_inpost" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_trilab_delivery_inpost"/>
                        <div class="text-muted">
                            Compute shipping costs and ship with InPost
                        </div>
                        <div class="content-group">
                            <div class="mt16" attrs="{'invisible': [('module_trilab_delivery_inpost','=',False)]}">
                                <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right"
                                        type="action" string="InPost Delivery Methods" class="btn-link"
                                        context="{'search_default_delivery_type': 'inpost'}"/>
                            </div>
                            <div id="sale_delivery_inpost">
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
