<?xml version="1.0" encoding="utf-8"?>
<data>

    <record id="view_delivery_carrier_form_trilab_delivery_base" model="ir.ui.view">
        <field name="name">delivery.carrier.form.trilab.base</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">

            <field name="integration_level" position="after">
                <field name="x_delivery_can_pickup" string="Use pickup" readonly="1"/>
                <field name="x_pricing"/>
            </field>

            <xpath expr="//page[@name='destination']" position="before">
                <page name="x_pricing" string="Pricing" attrs="{'invisible': [('x_pricing', 'not in', ['fixed', 'grid'])]}">
                    <group name="fixed_price" attrs="{'invisible':[('x_pricing', '!=', 'fixed')]}">
                        <field name="fixed_price"/>
                    </group>

                    <group name="x_price_grid" attrs="{'invisible':[('x_pricing', '!=', 'grid')]}">
                        <field name="price_rule_ids" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</data>
