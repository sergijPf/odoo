<odoo>
    <data>
         <record id="magento_res_config_settings_ept_inherit_view" model="ir.ui.view">
            <field name="name">Magento Settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="odoo_magento2_ept.view_magento_res_config_settings_ept" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='auto_create_product']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='auto_create_product']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='auto_create_product']/following-sibling::div" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='allow_import_image_of_products']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='allow_import_image_of_products']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@id='allow_import_image_of_products']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='import_product_category']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='import_product_category']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@id='import_product_category']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
         </record>
    </data>
</odoo>