<?xml version="1.0" ?>
<odoo>
    <record id="magento_product_form_inherit_view" model="ir.ui.view">
        <field name="name">magento_product_form_inherit_view</field>
        <field name="model">magento.product.product</field>
        <field name="inherit_id" ref="odoo_magento2_ept.view_magento_product_form"/>
        <field name="arch" type="xml">
            <field name="odoo_product_id" position="after">
                <field name="odoo_prod_categ"/>
                <br/>
                <field name="magento_prod_categ"/>
                <field name="prod_categ_name" string="Configurable Product Name"/>
                <br/>
            </field>

            <xpath expr="//button[@name='view_odoo_product']" position="before">
                <button class="oe_stat_button" name="delete_in_magento" icon="fa-remove" type="object"
                        attrs="{'invisible': [('magento_status','!=','in_magento')]}"
                        modifiers="{}" options="{}">
                    <span class="o_stat_text" style="color:#da3434" modifiers="{}">
                        Delete in Magento
                    </span>
			    </button>
            </xpath>

            <xpath expr="//sheet" position="before">
                <header>
                    <button name="process_manually"
                            string="Process Export Manually"
                            type="object" class="btn-primary"
                            attrs="{'invisible':[('magento_status', '==', 'in_magento')]}"/>
                </header>
            </xpath>

            <xpath expr="//field[@name='product_template_attribute_value_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_sku']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_sku']" position="after">
                <field name="x_magento_name"/>
            </xpath>

            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='product_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_website_ids']" position="after">
                <field name="magento_status" readonly="1"/>
            </xpath>

            <xpath expr="//field[@name='magento_product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_instance_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='odoo_product_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_product_name']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='lst_price']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//page[@name='images']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//page[@name='notes']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='created_at']" position="replace">
                <field name="magento_export_date" string="Current Product Last Export Date" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='updated_at']" position="replace">
                <field name="magento_export_date_conf" string="Product Category Last Export Date" readonly="1"/>
            </xpath>

        </field>
    </record>

    <record id="action_magento_product_export_prepare" model="ir.actions.server">
        <field name="name">Export To Magento</field>
        <field name="model_id" ref="model_magento_product_product"/>
        <field name="binding_model_id" ref="model_magento_product_product"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">records.process_products_export_to_magento()</field>
    </record>

    <record id="magento_product_product_search_inherit_view" model="ir.ui.view">
        <field name="name">Magento Product Search Inherit</field>
        <field name="model">magento.product.product</field>
        <field name="inherit_id" ref="odoo_magento2_ept.magento_product_product_search_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='magento_instance_id']" position="replace">
                <field name="prod_categ_name"/>
                <filter string="Not in Magento" name="not_in_magento"
                        domain="[('magento_status', '!=', 'in_magento')]"/>
                <separator/>
                    <filter name="archived" string="Archived" domain="[('active','=',0)]"/>
            </xpath>
             <xpath expr="//search/group" position="replace">
                <group expand="1" string="Group By">
                    <filter string="Instances" name="group_by_instance"
                            context="{'group_by': 'magento_instance_id'}"/>
                    <filter string="Product Category" name="group_by_product_category"
                            context="{'group_by': 'prod_categ_name'}"/>
                    <filter string="Magento Status" name="group_by_status"
                            context="{'group_by': 'magento_status'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_magento_product_tree_inherit_view" model="ir.ui.view">
        <field name="name">magento_product_product_tree_inherit_view</field>
        <field name="model">magento.product.product</field>
        <field name="inherit_id" ref="odoo_magento2_ept.view_magento_product_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">magento_instance_id, magento_sku</attribute>
            </xpath>

            <xpath expr="//tree" position="inside">
                <header>
                    <button name="process_products_export_to_magento"
                            context="{'status_check': True}"
                            string="Update Export Status"
                            type="object"
                            class="btn btn-info ml-3"/>
                </header>
            </xpath>

            <xpath expr="//field[@name='sync_product_with_magento']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='magento_instance_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='qty_available']" position="before">
                <field name="product_template_attribute_value_ids"
                       widget="many2many_tags"
                       readonly="1"
                       optional="show"
                       can_create="false"
                       can_write="false"
                       modifiers="{'readonly':true}"/>
            </xpath>

            <xpath expr="//field[@name='magento_sku']" position="before">
                <field name="magento_instance_id"/>
                <field name="magento_website_ids" widget="many2many_tags"/>
            </xpath>

            <xpath expr="//field[@name='product_type']" position="replace">
                <field name="magento_status"
                       decoration-success="magento_status == 'in_magento'"
                       decoration-muted="magento_status == 'not_exported' or magento_status == 'deleted'"
                       decoration-info="magento_status == 'in_process'"
                       decoration-warning="magento_status == 'need_to_link' or magento_status == 'update_needed'"
                       decoration-danger="magento_status == 'log_error'"
                       widget="badge"
                       optional="show"
                       on_change="1"
                       modifiers="{'readonly':true}"
                />
            </xpath>
        </field>
    </record>

