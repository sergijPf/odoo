<?xml version="1.0" ?>
<odoo>
    <record id="magento_product_form_inherit_view" model="ir.ui.view">
        <field name="name">magento_product_form_inherit_view</field>
        <field name="model">magento.product.product</field>
        <field name="inherit_id" ref="odoo_magento2_ept.view_magento_product_form"/>
        <field name="arch" type="xml">
            <field name="odoo_product_id" position="after">
                <field name="categ_id" string="Odoo Product Category"/>
            </field>

<!--            <xpath expr="//sheet" position="before">-->
<!--                <header>-->
<!--                    <field name="magento_product_id" invisible="1"/>-->
<!--                    <button name="prepare_products_export_to_magento" type="object" class="oe_highlight" string="Export To Magento"-->
<!--                            attrs="{'invisible' : [('magento_product_id','!=',False)]}"/>-->
<!--                </header>-->
<!--            </xpath>-->

            <xpath expr="//field[@name='product_template_attribute_value_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//page[@name='images']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

    <record id="action_magento_product_export_prepare" model="ir.actions.server">
        <field name="name">Export To Magento</field>
        <field name="model_id" ref="model_magento_product_product"/>
        <field name="binding_model_id" ref="model_magento_product_product"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">records.prepare_products_export_to_magento()</field>
    </record>
</odoo>