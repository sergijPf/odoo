<?xml version="1.0" ?>
<odoo>
    <record id="magento_product_form_inherit_view" model="ir.ui.view">
        <field name="name">magento_product_form_inherit_view</field>
        <field name="model">magento.product.product</field>
        <field name="inherit_id" ref="odoo_magento2_ept.view_magento_product_form"/>
        <field name="arch" type="xml">
            <field name="odoo_product_id" position="after">
                <field name="prod_categ_name" string="Odoo Product Category"/>
            </field>

            <xpath expr="//field[@name='product_template_attribute_value_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_sku']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='product_type']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//page[@name='images']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

    <record id="action_magento_product_export_prepare" model="ir.actions.server">
        <field name="name">Export To Magento</field>
        <field name="model_id" ref="model_magento_product_product"/>
        <field name="binding_model_id" ref="model_magento_product_product"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">records.process_products_export_to_magento()</field>
    </record>


    <record id="view_magento_product_tree_inherit_view" model="ir.ui.view">
        <field name="name">magento.product.product.tree_inherit_view</field>
        <field name="model">magento.product.product</field>
        <field name="inherit_id" ref="odoo_magento2_ept.view_magento_product_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='magento_product_name']" position="after">
                <field name="product_template_attribute_value_ids"
                       widget="many2many_tags"
                       readonly="1"
                       can_create="false"
                       can_write="false"
                       modifiers="{'readonly':true}"/>
            </xpath>
        </field>
    </record>


<!--    Log book with errors section-->
     <record id="view_exported_product_log_book_filter" model="ir.ui.view">
        <field name="name">magento.product.product.search</field>
        <field name="model">magento.product.product</field>
        <field name="arch" type="xml">
            <search string="Export Products Log Book">
                <field name="magento_log_message"/>
                <field name="magento_log_message_conf"/>
                <filter string="Product error" name="prod_log" domain="[('magento_log_message', '!=', '')]"/>
                <filter string="Conf.Product error" name="conf_prod_log"
                        domain="[('magento_log_message_conf', '!=', '')]"/>
                <group expand="0" string="Group By">
                        <filter string="Instances" name="group_by_instance"
                                context="{'group_by': 'magento_instance_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_magento_exported_products_log_book_tree" model="ir.ui.view">
        <field name="name">magento.product.product.log.book.tree</field>
        <field name="model">magento.product.product</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0" default_order="magento_sku desc">
                <field name="magento_instance_id"/>
                <field name="magento_sku"/>
                <field name="magento_log_message"/>
                <field name="prod_categ_name"/>
                <field name="magento_log_message_conf"/>
            </tree>
        </field>
    </record>

    <record id="action_show_log_messages_of_exported_products" model="ir.actions.act_window">
        <field name="name">Exported Product Logs</field>
        <field name="res_model">magento.product.product</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_magento_exported_products_log_book_tree"/>
        <field name="search_view_id" ref="view_exported_product_log_book_filter"/>
        <field name="context">{'group_by': ['magento_instance_id'],'search_default_prod_log':1,'search_default_conf_prod_log':1}</field>
        <field name="help" type="html">
            <div class="oe_empty_magento_instance">
                <br/>
                <br/>
                <br/>
                <p>
                    <b>There is No Data yet...</b>
                </p>
            </div>
        </field>
    </record>

    <menuitem id="odoo_magento2_ept.sync_import_magento_product_queue_ept_menu"
              sequence="2"
              name="Products"
              parent="odoo_magento2_ept.magento_data_queue_ept_menu"
              action="action_show_log_messages_of_exported_products"/>
<!--    End of Log book section-->
</odoo>