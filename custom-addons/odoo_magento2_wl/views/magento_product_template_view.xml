<?xml version="1.0" ?>
<odoo>
    <record id="magento_product_template_form_inherit_view" model="ir.ui.view">
        <field name="name">magento_product_template_form_inherit_view</field>
        <field name="model">magento.product.template</field>
        <field name="inherit_id" ref="odoo_magento2_ept.magento_product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='images']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//page[@name='notes']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='odoo_product_template_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_sku']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_product_name']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_instance_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='product_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_website_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='magento_product_template_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='created_at']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='updated_at']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>


     <record id="view_magento_product_template_tree_inherit_view" model="ir.ui.view">
        <field name="name">magento_product_template_tree_inherit_view</field>
        <field name="model">magento.product.template</field>
        <field name="inherit_id" ref="odoo_magento2_ept.view_magento_product_template_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sync_product_with_magento']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>