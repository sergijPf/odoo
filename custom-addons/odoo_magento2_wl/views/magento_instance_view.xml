<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="magento_instance_form_inherit_view" model="ir.ui.view">
            <field name="name">magento.instance.form.inherit.view</field>
            <field name="model">magento.instance</field>
            <field name="inherit_id" ref="odoo_magento2_ept.view_magento_instance_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']" position="before">
                    <page name="allowed_users" string="Users" >
                        <group>
                            <field name="user_ids"
                                   widget="many2many_tags"
                                   options="{'no_create': True}"/>
                        </group>
                    </page>
                </xpath>
            </field>
    </record>
</odoo>