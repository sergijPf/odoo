<odoo>

    <record id="view_magento_product_category_update" model="ir.ui.view">
            <field name="name">Update Magento Product Category for Magento Layer</field>
            <field name="model">product.category.update</field>
            <field name="arch" type="xml">
                <form string="Update Magento Product Category">
                    <group>
                        <field name="product_categ" required="1"/>
                    </group>
                    <group>
                        <div style="color:#000000">
                            <p class="alert alert-warning" role="alert">
                                <u>
                                    <h3 style="font-weight:bold;color:#7d5a29">Note :</h3>
                                </u>
                                <b>
                                    This action will update Product Category for the selected Products in Magento Layer!
                                </b>
                            </p>
                        </div>
                    </group>
                    <footer>
                        <button string="Update Category" class="oe_highlight" type="object"
                                name="update_products_category_for_magento"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    <record id="magento_product_category_update_wizard" model="ir.actions.act_window">
        <field name="name">Update Magento Category</field>
        <field name="res_model">product.category.update</field>
        <field name="binding_model_id" ref="odoo_magento2_wl.model_magento_product_product"/>
        <field name="binding_view_types">list,form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_magento_product_category_update"/>
        <field name="target">new</field>
    </record>

</odoo>