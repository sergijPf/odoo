<?xml version="1.0" encoding="UTF-8"?>

<templates>
  <t t-name="smartino_common.add_to_cart_popup">
    <div class="modal fade" id="add-to-cart-modal-popup" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Product added to your cart</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span>&amp;times;</span>
            </button>
          </div>
          <div class="modal-body">
            <i><t t-esc="qty_added" />&amp;nbsp;<t t-esc="uom_name"/></i> of <strong t-esc="product_name" /> added to your cart.
          </div>
          <div class="modal-footer">
            <a href="/shop/cart" class="btn btn-secondary">Go to cart</a>
            <button type="button" class="btn btn-primary" data-dismiss="modal">Continue shopping</button>
          </div>
        </div>
      </div>
    </div>
  </t>
</templates>
