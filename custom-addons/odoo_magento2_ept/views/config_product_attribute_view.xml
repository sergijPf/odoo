<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_config_product_attribute_group_form" model="ir.ui.view">
            <field name="name">config.product.attribute.group.form</field>
            <field name="model">config.product.attribute.group</field>
            <field name="arch" type="xml">
                <form string="Config.Product Attribute Group" delete="1">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="view_config_product_attribute_tree" model="ir.ui.view">
        <field name="name">config.product.attribute.tree</field>
        <field name="model">config.product.attribute</field>
        <field name="arch" type="xml">
            <tree string="Config.Product Attributes">
<!--                    <field name="complete_category_name"/>-->
                <field name="color" widget="color_picker"/>
                <field name="name"/>
                <field name="attribute_value"/>
            </tree>
        </field>
    </record>

    <record id="view_config_product_attribute_form" model="ir.ui.view">
        <field name="name">config.product.attribute.form</field>
        <field name="model">config.product.attribute</field>
        <field name="arch" type="xml">
            <form string="Config.Product Attribute" delete="1">
                <sheet>
                    <group>
                        <field name="categ_group_id"/>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                        <field name="attribute_value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="config_product_attribute_search_view" model="ir.ui.view">
        <field name="name">config.product.attribute.search.view</field>
        <field name="model">config.product.attribute</field>
        <field name="arch" type="xml">
            <search string="Config.Product Attribute search view">
                <field name="categ_group_id"/>
<!--                    <filter name="archived" string="Archived" domain="[('active','=',False)]"/>-->
                <group expand="0" string="Group By">
                    <filter name="Attribute Category" string="Attribute Category" context="{'group_by' : 'categ_group_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="config_product_attribute_action" model="ir.actions.act_window">
            <field name="name">Config.Product Attribute</field>
            <field name="res_model">config.product.attribute</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_config_product_attribute_tree"/>
            <field name="context">
                {'group_by': ['categ_group_id']}
            </field>
<!--                <field name="help" type="html">-->
<!--&lt;!&ndash;                <p>&ndash;&gt;-->
<!--&lt;!&ndash;                    You can't create Product Category directly from Here. Please assign root product category from settings&ndash;&gt;-->
<!--&lt;!&ndash;                    <i class="fa fa-angle-double-right" /> instance <i class="fa fa-angle-double-right" />&ndash;&gt;-->
<!--&lt;!&ndash;                    select instance <i class="fa fa-angle-double-right" /> Product Categories&ndash;&gt;-->
<!--&lt;!&ndash;                </p>&ndash;&gt;-->
<!--                </field>-->
    </record>

    <menuitem id="menu_item_config_product_attribute" name="Config.Product Attributes"
        parent="website_sale.menu_product_settings" sequence="3"
        action="config_product_attribute_action"/>
</odoo>
