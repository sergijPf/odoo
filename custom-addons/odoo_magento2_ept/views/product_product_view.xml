<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_normal_form_inherit_view" model="ir.ui.view">
            <field name="name">product_product_form_inherit_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='public_categ_ids']" position="after">
                    <field name="config_product_id" options="{'no_create':True,'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>

        <record id="product_product_search_inherit_view" model="ir.ui.view">
            <field name="name">product_product_search_inherit_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <field name="magento_product_ids" invisible="1"/>
                    <separator/>
                    <filter name="magento_products" string="Has Magento Product" domain="[('magento_product_ids','!=',False)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>