<odoo>

    <record id="view_product_public_category_update" model="ir.ui.view">
            <field name="name">Change Magento Product Public Category to be used for Magento Export</field>
            <field name="model">product.public.category.update</field>
            <field name="arch" type="xml">
                <form string="Product Public Category Update">
                    <group>
                        <field name="category_id" required="1" options="{'no_create':True,'no_create_edit': True}"/>
                    </group>
                    <group>
                        <div style="color:#000000">
                            <p class="alert alert-warning" role="alert">
                                <u>
                                    <h3 style="font-weight:bold;color:#7d5a29">Note :</h3>
                                </u>
                                <p>
                                    <b>1. This action will change Product Public Category for the selected Products!</b>
                                </p>
                                <p>
                                    <b>2. The Product Public Category will be used to create Configurable Product in Magento.</b>
                                </p>
                            </p>
                        </div>
                    </group>
                    <footer>
                        <button string="Update Category" class="oe_highlight" type="object"
                                name="update_product_public_category"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    <record id="magento_product_public_category_update_wizard" model="ir.actions.act_window">
        <field name="name">Update Product Public Category</field>
        <field name="res_model">product.public.category.update</field>
        <field name="binding_model_id" ref="model_product_product"/>
        <field name="binding_view_types">list</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_product_public_category_update"/>
        <field name="target">new</field>
    </record>

</odoo>